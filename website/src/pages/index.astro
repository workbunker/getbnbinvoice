<script>
  const form = document.getElementById("register-form") as HTMLFormElement;
  const emailInput = document.getElementById("register-email") as HTMLInputElement;
  const btn = document.getElementById("register-btn") as HTMLButtonElement;
  const msg = document.getElementById("register-msg") as HTMLParagraphElement;

  const API_URL = "https://europe-west1-getbnbinvoice.cloudfunctions.net/register";

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const email = emailInput.value.trim();
    if (!email) return;

    btn.disabled = true;
    btn.textContent = "Registering...";
    msg.textContent = "";
    msg.className = "register-msg";

    try {
      const res = await fetch(API_URL, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ email }),
      });
      const data = await res.json();

      if (data.success) {
        msg.textContent = `Your key: ${data.key} — check your email! You have ${data.credits} free downloads.`;
        msg.className = "register-msg success";
        emailInput.value = "";
      } else if (data.error === "already_registered") {
        msg.textContent = data.key
          ? `Already registered! Your key: ${data.key}`
          : "This email is already registered. Check your email for the key.";
        msg.className = "register-msg success";
      } else if (data.error === "too_many_registrations") {
        msg.textContent = "Too many registrations. Please try again later.";
        msg.className = "register-msg error";
      } else {
        msg.textContent = data.error || "Registration failed. Please try again.";
        msg.className = "register-msg error";
      }
    } catch {
      msg.textContent = "Network error. Please try again.";
      msg.className = "register-msg error";
    }

    btn.disabled = false;
    btn.textContent = "Get Free Key";
  });
</script>

